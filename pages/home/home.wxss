/* pages/home/home.wxss */
page {
    background-color: #000;
}

.preview {
    width: 100%;
    height: 100vh;
    display: block;
}

camera {
    height: 100vh;
}

.btn-group {
    display: flex;
    justify-content: space-around;
    position: absolute;
    width: 100%;
    bottom: 50px;
    z-index: 100 !important;
}

.btn-group cover-image {
    width: 50px;
    height: 50px;
}

.image-box {
    position: relative;
}

.btn-back {
    position: absolute;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 15px 10px 12px;
    border-radius: 50px;
    color: #fff;
    background-color: #000;
    opacity: .7;
    font-size: 13px;
    font-weight: bold;
    width: 120px;
    bottom: 50px;
    left: 50%;
    transform: translateX(-50%);
}

.info-box {
    box-sizing: border-box;
    position: absolute;
    padding: 0 20px;
    width: 100%;
    top: 50%;
    transform: translateY(-50%);
}

.info-item {
    background-color: #fff;
    border-radius: 20px;
    padding: 20px;
    margin-bottom: 20px;
    display: flex;
    justify-content: space-around;
    box-shadow: 1px 1px 20px -8px #000;
}